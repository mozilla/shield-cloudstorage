{
  "name": "cloudstorage-webextensionExperiment@shield.mozilla.org",
  "applications": {
    "gecko": { "id": "cloudstorage-webextensionExperiment@shield.mozilla.org" }
  },
  "version": "1.0.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["management"],
  "web_accessible_resources": [
    "./privileged/ui/cloudstorage.xml",
    "./skin/clouddownloads.css",
    "./skin/dropbox.svg",
    "./skin/googledrive.svg",
    "./skin/download.svg"
  ],
  "experiment_apis": {
    "cloudstorage": {
      "schema": "./privileged/ui/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/ui/cloudstorage.js",
        "paths": [["cloudstorage"]]
      }
    }
  }
}
